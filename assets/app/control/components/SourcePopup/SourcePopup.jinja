{% import 'control/components/Btn/Btn.jinja' as Btn %}
{% import 'control/components/Input/Input.jinja' as Input %}
{% import 'control/components/Textarea/Textarea.jinja' as Textarea %}


<div class="SourcePopup-content">
    <section class="SourcePopup--main">
        <h2 class="SourcePopup-header">Add source</h2>
        <form class="Form" action="/">
            <div class="Form-row">
                {% call Input.Input(label='Title', name='sourceTitle', value=model.sourceTitle) %}{% endcall %}
            </div>
            <div class="Form-row">
                {% call Input.Input(label='Author', name='sourceAuthor', value=model.sourceAuthor) %}{% endcall %}
            </div>
            <div class="Form-row">
                {% call Input.Input(label='Type', name='sourceType', value=model.sourceType) %}{% endcall %}
            </div>
            <div class="Form-row">
                {% call Input.Input(label='Format', name='sourceFormat', value=model.sourceFormat) %}{% endcall %}
            </div>
            <div class="Form-row">
                {% call Input.Input(label='Length', name='sourceLength', value=model.sourceLength) %}{% endcall %}
            </div>
            <div class="Form-row">
                {% call Input.Input(label='Link', name='sourceLink', value=model.sourceLink) %}{% endcall %}
            </div>
            <div class="Course-checkboxRow">
                <label class="mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect Course-checkbox"
                       for="is-middle-{{ cid }}">
                    <input type="checkbox" id="is-middle-{{ cid }}" class="mdl-checkbox__input" name="isMiddle"
                           {% if model.isMiddle %}checked{% endif %}/>
                </label>
                <span class="mdl-checkbox__label Course-checkboxLabel">Is free?</span>
            </div>
        </form>
    </section>

    <div class="Submit">
        {% call Btn.Btn('Save', classes=['AbstractPopup-save'], primary=True) %}{% endcall %}
    </div>

    <button class="AbstractPopup-close SourcePopup-close u-Btn">
        <svg viewBox="0 0 24 24">
            <path fill="#000000"
                  d="M19,6.41L17.59,5L12,10.59L6.41,5L5,6.41L10.59,12L5,17.59L6.41,19L12,13.41L17.59,19L19,17.59L13.41,12L19,6.41Z"/>
        </svg>
    </button>
</div>
