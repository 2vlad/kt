{% import 'control/utils/macros.jinja' as macros %}
{% import 'control/components/BtnRemove/BtnRemove.jinja' as BtnRemove %}

<div class="CardItem">
    <a class="CardItem-link" href="/control/cards/{{ model.id }}">
{#      <div class="ProjectItem-img" style="background-image: url({{ model.outer.url|safe }});"></div>#}
        <div class="CardItem-title">{{ model.field }}</div>
        <div class="CardItem-subtitle">{{ model.position }}</div>
    </a>
    <div class="CardItem-checkboxBox">
        <label class="mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect CourseItem-checkbox" for="on-main-{{ cid }}">
            <input type="checkbox" id="on-main-{{ cid }}" class="mdl-checkbox__input" name="onMain"
                   {% if model.onMain %}checked{% endif %}/>
        </label>
        <span class="mdl-checkbox__label"></span>
    </div>
    <div class="CardItem-remove">
        {% call BtnRemove.BtnRemove() %}{% endcall %}
    </div>
</div>
