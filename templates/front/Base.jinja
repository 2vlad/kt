<body style="position: relative; margin: 0; padding-bottom: 6rem; min-height: 100%;"
      class="{% block body_class %}{% endblock %}">
<img style="display:none" alt="" src="{{ static('svg/front/symbol/svg/sprite.symbol.svg') }}">

{% block before_content %}{% endblock %}

<div class="Content">
    {% block content %}{% endblock %}
</div>

{#{% include 'control/common/components/Spinner/Spinner.jinja' %}#}

