{% block data %}
    <script>
        window.app = {
            data: {}, settings: {
                staticUrl: '{{ STATIC_URL }}',
                urls: {}
            }
        };
    </script>
{% endblock %}

{% block body %}
{% endblock %}

{% block libs %}
